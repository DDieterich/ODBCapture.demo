-- Must escape "@" with a CHR(16): ^P, Control-P, DLE
--   Otherwise, SQL*Plus will attempt to run a script
function escape_at_sign
      (in_str      IN   CLOB)
   return CLOB
is
begin
   return regexp_replace(in_str, '('||LF||'[[:space:]]*)@', '\1'||CHR(16)||'@');
end escape_at_sign;


