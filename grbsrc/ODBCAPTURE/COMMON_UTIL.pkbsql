-- Check for invalid characters in filenames
--
--http://stackoverflow.com/questions/1976007/what-characters-are-forbidden-in-windows-and-linux-directory-names
-- "<" (less than)
-- ">" (greater than)
-- ":" (colon)
-- """ (double quote)
-- "/" (forward slash)
-- "\" (backslash)
-- "|" (vertical bar or pipe)
-- "?" (question mark)
-- "*" (asterisk)
-- "$" - Starting from Oracle Database release 19c, version 19.3, file names
--       with the $ character will no longer run on Windows.
-- "%" - https://superuser.com/q/1096208#answer-1096273 - because % has a special
--       meaning there, you need to use syntax outlined below to create such files
--
procedure check_filename
      (in_filename  in varchar2)
is
   char_loc  pls_integer;
begin
   char_loc := regexp_instr(in_filename, '[<>:"/\|?*$%]');
   if char_loc != 0
   then
      raise_application_error (-20000,
         'Found Forbidden Filename Character in ' || in_filename ||
                                   ' at postion ' || char_loc    ||
                                            ': "' || substr(in_filename, char_loc, 1) ||
                                             '".' );
   end if;
end check_filename;

------------------------------------------------------------
-- Fix commonly found invalid filename characters in database object names
function fix_filename
      (in_filename  in varchar2)
   return varchar2 deterministic
is
begin
   return regexp_replace(in_filename, '[$%]', '_');
end fix_filename;


